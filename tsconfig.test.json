{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noEmit": false,
        "outDir": ".test-dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2020",
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"]
        },
        "typeRoots": ["./tests/types"]
    },
    "include": [
        "component-models/**/*.ts",
        "services/**/*.ts",
        "config/**/*.ts",
        "repositories/QuizRepository.ts",
        "repositories/__tests__/**/*.ts"
    ]
}
